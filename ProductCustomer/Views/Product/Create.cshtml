@model ProductCustomer.Models.Product

<form method="Post" asp-action="Create">
<div class="border p-3">
    <div class="form-group row">
        <h2 class="text-black-50 pl-3">Add Product</h2>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ProductName"></label>
                </div>
                <div class="col-4">
                    <label asp-for="Customer"></label>
                </div>
                <div class="col-4">
                    <label asp-for="Price"></label>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <input asp-for="ProductName" class="form-control"/>
                </div>
                <div class="col-4">
                    <input asp-for="Customer" class="form-control"/>
                </div>
                <div class="col-4">
                    <input asp-for="Price" class="form-control"/>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-2 row">
                    <div class="col">
                        <input type="submit" class="btn btn-info w-75" value="Create"/>
                    </div>
                    <div class="col">
                        <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</form>
