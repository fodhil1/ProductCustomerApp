
@model IEnumerable<ProductCustomer.Models.Cost>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Costs List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Cost" asp-action="Create" class="btn btn-primary">Create New Cost</a>
        </div>
    </div>
    <br />

    @if(Model.Count() > 0)
            {
                <table class="table table-bordered table-striped" style="width: 100%">
                    <thead>
                        <tr>
                            <th>
                                Cost
                            </th>
                            <th>
                                Amount
                            </th>
                            <th>
                                Changes
                            </th>
                            
                        </tr>
                    </thead>

                    <tbody>
                        @foreach(var cost in Model)
                {
                    <tr>
                        <td width="30%">@cost.CostName</td>
                        <td width="30%">@cost.Amount</td>
                        <td width="40%">
                            <div class="col-6 text-right">
                                <a asp-controller="Cost" asp-action="Update" asp-route-Id="@cost.Id" class="btn btn-primary mx-1">Update</a>
                                <a asp-controller="Cost" asp-action="DeletePost" asp-route-Id="@cost.Id" class="btn btn-danger mx-1">Delete</a>

                            </div>
                        </td>
                    </tr>
                }
                    </tbody>
                </table>
            }
            else
            {
                <p>No Products Created Yet</p>
            }

</div>
